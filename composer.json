{
    "name": "pashkevich/loyverse-sdk",
    "description": "A simple to use PHP class to work with the Loyverse API",
    "keywords": [
        "loyverse",
        "loyverse-api",
        "loyverse-sdk",
        "loyverse-php"
    ],
    "homepage": "https://github.com/siarheipashkevich/loyverse-sdk",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Sergey Pashkevich",
            "email": "siarheipashkveich@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.2"
    },
    "require-dev": {
        "mockery/mockery": "^1.4",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Pashkevich\\Loyverse\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pashkevich\\Loyverse\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
